# BMI Chat Docker Environment Variables
# Copy this file to .env in the docker directory and update the values

# =============================================================================
# Security
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production-12345678901234567890

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=2000

# =============================================================================
# Application Configuration
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite database will be stored in Docker volume
# Vector database will be stored in Docker volume

# =============================================================================
# Development Overrides (uncomment for development)
# =============================================================================
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
