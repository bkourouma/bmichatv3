# =============================================================================
# BMI Chat Application - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your actual production values
# This file contains production-specific settings

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=your_production_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.0
OPENAI_MAX_TOKENS=2000

# =============================================================================
# Database Configuration
# =============================================================================
DB_SQLITE_PATH=/app/data/bmi.db
VECTOR_DB_PATH=/app/data/vectors
UPLOAD_DIR=/app/data/uploads

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# Production CORS origins
CORS_ORIGINS=["https://bmi.engage-360.net", "https://www.bmi.engage-360.net"]

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=https://bmi.engage-360.net/api
VITE_WS_URL=wss://bmi.engage-360.net/ws

# =============================================================================
# Document Processing Configuration
# =============================================================================
CHUNK_SIZE=2000
CHUNK_OVERLAP=400
MAX_CHUNKS_PER_DOCUMENT=100
SUPPORTED_FILE_TYPES=["pdf", "txt", "docx", "md"]

# =============================================================================
# Chat Configuration
# =============================================================================
MAX_CHAT_HISTORY=10
DEFAULT_RETRIEVAL_K=3
MAX_RETRIEVAL_K=5
CHAT_TIMEOUT_SECONDS=30

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_production_secret_key_here_use_strong_random_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=WARNING
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=50MB
LOG_BACKUP_COUNT=10

# =============================================================================
# Widget Configuration
# =============================================================================
WIDGET_DEFAULT_POSITION=right
WIDGET_DEFAULT_ACCENT_COLOR=#0056b3
WIDGET_DEFAULT_COMPANY_NAME=BMI
WIDGET_DEFAULT_ASSISTANT_NAME=Akissi
WIDGET_DEFAULT_WELCOME_MESSAGE=Bonjour! Comment puis-je vous aider?

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_UPLOAD_SIZE=50MB
RATE_LIMIT_PER_MINUTE=100
CACHE_TTL_SECONDS=600

# =============================================================================
# Production Environment
# =============================================================================
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_CERT_PATH=/etc/ssl/certs/bmi.engage-360.net.crt
SSL_KEY_PATH=/etc/ssl/private/bmi.engage-360.net.key

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here_optional
